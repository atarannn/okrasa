.form-wrapper(data-form-wrapper)
  .form-close(data-close-form)
    <svg width="26" height="26" viewBox="0 0 26 26" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M25 25L1 1M1 25L25 1L1 25Z" stroke-width="2"/>
    </svg>
  form(data-form autocomplete="off").form
    .form-title.dark-title Замовити дзвінок
    .form-text.dark-text Залишіть контактні дані і ми обов'язково зв'яжемося з вами
    .form-field.form-field-input(data-field-input data-field-name data-status="field--inactive").first-offset
      .input-title Ім’я:
      input(type='text' name="name" placeholder="Ім’я").form-field__input
      .input-message(data-input-message)
    .form-field.disabled.form-field-input(data-field-input data-field-phone data-status="field--inactive")
      .input-title Телефон:
      input(type='text' name="phone" placeholder="Телефон").form-field__input
      .mask-absolute.js-mask-absolute +__ (___) __-__-___
      .input-message(data-input-message)
    .form-field.disabled.form-field-input(data-field-input data-field-comment data-status="field--inactive")
      .input-title Коментар:
      textarea(type='text' name="comment" placeholder="Коментар").form-field__input.text-input
      .input-message(data-input-message)
    button( type="submit" data-btn-submit).submit-btn.link.main-btn
        span(data-btn-submit-text) Надіслати повідомлення
        +svg('arrow')
